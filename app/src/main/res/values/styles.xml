<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeadingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomEditTextWithBg" parent="CustomEditText">
        <item name="android:background">@drawable/bg_rounded_white</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_rounded_red</item>
    </style>

    <style name="CustomButtonRed" parent="CustomButton">
        <item name="android:background">@drawable/bg_rounded_red</item>
    </style>

    <style name="CustomButtonBlue" parent="CustomButton">
        <item name="android:background">@drawable/bg_rounded_blue</item>
    </style>

    <style name="CustomButtonWhite" parent="CustomButton">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/selector_spinner</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerStyle">@style/mySpinnerItemStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/mySpinnerDropDownStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>


    <style name="mySpinnerDropDownStyle" parent="android:Widget.Spinner.DropDown">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="mySpinnerItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ErrorMessageStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppTheme.LargeText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.MediumText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.SmallText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.XSmallText">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="AppTheme.PrimaryText" parent="@style/AppTheme.SmallText">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="txtPopupHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
    </style>

    <style name="txtPopupButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txtPopupDescStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:gravity">left</item>
    <item name="android:padding">0dp</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:textSize">14sp</item>
    </style>

</resources>
